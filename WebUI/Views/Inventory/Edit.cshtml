@model Models.Inventory

@{
    ViewData["Title"] = "Edit";

}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Inventory</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InventoryID" class="control-label"></label>
                    <input asp-for="InventoryID" class="form-control" />
                    <span asp-validation-for="InventoryID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InvStoreID" class="control-label"></label>
                    <input asp-for="InvStoreID" class="form-control" />
                    <span asp-validation-for="InvStoreID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InvProductID" class="control-label"></label>
                    <input asp-for="InvProductID" class="form-control" />
                    <span asp-validation-for="InvProductID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
